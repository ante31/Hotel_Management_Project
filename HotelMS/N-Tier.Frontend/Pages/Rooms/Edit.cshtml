@page
@using HotelMS.Core.Entities;
@using HotelMS.Core.Enums;
@model HotelMS.Frontend.Pages.Rooms.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Room.RoomType" class="control-label"></label>
                <select asp-for="Room.RoomType" class="form-control" asp-items="Html.GetEnumSelectList<RoomTypeEnum>()"></select>
                <span asp-validation-for="Room.RoomType" class="text-danger"></span>
            </div>
			<div class="form-group form-check" style="margin-top: 10px;">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Room.AvailabilityStatus" /> @Html.DisplayNameFor(model => model.Room.AvailabilityStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Room.Price" class="control-label"></label>
                <input asp-for="Room.Price" class="form-control" />
                <span asp-validation-for="Room.Price" class="text-danger"></span>
            </div>
			<div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Save" class="btn btn-primary" />
				<a asp-page="./Index" class="btn btn-outline-primary ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
